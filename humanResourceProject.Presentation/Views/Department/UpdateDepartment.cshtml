@model UpdateDepartmentDTO

@{
    ViewData["Title"] = "UpdateDepartment";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}
<head>


    <style>
        ul {
            list-style-type: none;
            padding: 0;
        }
    </style>
</head>
<body>
    <div class="row">
        @Html.Partial("_PanelPartial")

        <div class="col-md-4" style="margin: 50px auto">
            <form asp-action="UpdateDepartment" asp-controller="Department" method="post">
                <div class="card shadow p-3 mb-5 bg-body rounded">
                    <div class="card-header">
                        <h1 class="card-title text-center">Departman Güncelle</h1>
                    </div>
                    <div class="card-body">

                        <div class="form-group mb-3">
                            <label asp-for="DepartmentName" class="control-label"></label>
                            <input value="@Model.DepartmentName" asp-for="DepartmentName" class="form-control" />
                            <span asp-validation-for="DepartmentName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label"></label>
                            <input value="@Model.Description" asp-for="Description" class="form-control" />

                        </div>
                        <div class="form-group mb-3">
                            <input asp-for="CompanyId" type="hidden" class="form-control" />
                            <input asp-for="Id" type="hidden" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label>*Zorunlu alan</label>
                        </div>

                        <div class="form-group mb-3 d-grid">
                            <input type="submit" value="Güncelle" class="btn btn-primary" />
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                </div>
            </form>
            <div>
                <a asp-controller="Employee" asp-action="Home"><button class="btn btn-secondary">Ana Sayfaya Dön</button></a>
            </div>
        </div>
    </div>
</body>