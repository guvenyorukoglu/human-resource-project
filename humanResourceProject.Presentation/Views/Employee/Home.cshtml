                                    <th style="width: 33%;">Avans No</th>
                                    <th style="width: 33%;">Avans Miktarı</th>
                                    <th style="width: 33%;">İstek Tarihi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    int count = 0;
                                    foreach (var advance in Model.MyAdvances)
                                    {
                                        if (count >= 5)
                                        {
                                            break;
                                        }

                                        if (advance != null)
