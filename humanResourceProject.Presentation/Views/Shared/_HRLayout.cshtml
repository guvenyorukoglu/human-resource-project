<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Monitorease - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</head>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #133a63; position:fixed; width:100vw;z-index:999">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: bold; color:white;">
                <img src="~/ImagesLogo/logo.png" alt="Monitorease Logo" style="width: 50px; margin-right: 10px;"> 
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item ms-auto d-flex align-self-center">
                            <span style="color:#f1d184">
                                Hoşgeldin @(User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Name).Value + " " + User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Surname).Value)!
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Logout">
                                <i class="fa fa-sign-out"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-auto">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="hakkimizda">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Iletisim">İletişim</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>
</header>


<body>
    @RenderBody()


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<style>
    .panel {
        height: 200vh;
        position: fixed;
        z-index:999;
        

    }

    a {
        text-decoration: none;
        color: #000;
        font-size: 14px;
    }

    .aside {
        margin-top: 200px;
        margin-left: 300px;
        padding-top: 60px;
        
        
    }

    h6 {
        font-size: 1vw;
        color: #ffffff;
    }
</style>