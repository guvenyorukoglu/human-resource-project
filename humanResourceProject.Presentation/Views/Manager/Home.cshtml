            <div class="col-md-4 calender card">
                <div id="calendar" style="width: 90%"></div>
            </div>

            <div class="col-md-3 holiday-info card"><h6>RESMİ TATİLLER</h6></div>
        </div>

        <div class="row text-center">
            <div class="col-md-3 upcoming-leave-info card"></div>
            <div class="col-md-3 upcoming-birthday-info card"></div>
            <div class="col-md-3 event-info card"></div>
        </div>
