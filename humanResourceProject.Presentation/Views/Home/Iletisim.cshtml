@{
    ViewData["Title"] = "İletişim";
}

<div class="container">
    <div class="row">
        
        <div class="col-md-6">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3005.669351284004!2d29.012735315375286!3d41.04260282771636!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac3122f8e96e5%3A0xd4ee3249a2bdcf3!2sBe%C5%9Fikta%C5%9F%2C%20Istanbul%2C%20Turkey!5e0!3m2!1sen!2sus!4v1643460862436!5m2!1sen!2sus" width="100%" height="400" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>

        </div>


        <div class="col-md-6">
            <h2>Bize Mail ile Ulaşın</h2>
            
            <form>
                <div class="form-group">
                    <label for="adSoyad">İsim Soyisim:</label>
                    <input type="text" class="form-control" id="adSoyad" name="adSoyad" required>
                </div>
                <div class="form-group">
                    <label for="firma">Firma Adı:</label>
                    <input type="text" class="form-control" id="firma" name="firma" required>
                </div>
                <div class="form-group">
                    <label for="mail">Mail Adresi:</label>
                    <input type="email" class="form-control" id="mail" name="mail" required>
                </div>
                <div class="form-group">
                    <label for="mesaj">Mesaj:</label>
                    <textarea class="form-control" id="mesaj" name="mesaj" rows="5" required></textarea>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Gönder</button>
            </form>
        </div>
    </div>
</div>
