@using humanResourceProject.Models.VMs;

@model CompanyVM

@{
    ViewData["Title"] = "Company Details";
}

<h2>Company Details</h2>

@if (Model != null)
{
    <div>
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Company Name</dt>
            <dd class="col-sm-10">@Model.CompanyName</dd>

            <dt class="col-sm-2">Number of Employees</dt>
            <dd class="col-sm-10">@Model.NumberOfEmployees</dd>

            <dt class="col-sm-2">Tax Number</dt>
            <dd class="col-sm-10">@Model.TaxNumber</dd>

            <dt class="col-sm-2">Tax Office</dt>
            <dd class="col-sm-10">@Model.TaxOffice</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.Address</dd>

            <dt class="col-sm-2">Phone Number</dt>
            <dd class="col-sm-10">@Model.PhoneNumber</dd>
        </dl>
    </div>
}
else
{
    <p>No company details found.</p>
}

<a asp-action="Edit" asp-controller="Company" asp-route-id="@Model.Id">Edit Company</a>

