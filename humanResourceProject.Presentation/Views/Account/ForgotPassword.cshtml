@model ForgotPasswordDTO

@{
    ViewData["Title"] = "Forgot Password";
}

<body>
    <div class="col-md-4 mt-5" style="margin: 0 auto">
        <form asp-action="ForgotPassword" asp-controller="Account" method="post">
            <div class="card shadow p-3 mb-5 rounded">
                <div class="card-body">

                    <div class="row">
                        <p class="small text-center">Şifrenizi sıfırlamak için lütfen e-mail adresinizi giriniz. Size şifrenizi sıfırlamak için bir e-mail göndereceğiz.</p>
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label mb-1 small">E-mail</label>
                            <input asp-for="Email" class="form-control small" />
                            @* <span asp-validation-for="Email" class="text-danger"></span> *@
                        </div>

                    </div>

                    <div class="form-group mb-3 d-grid">
                        <input type="submit" value="Gönder" class="btn btn-outline-primary" />
                    </div>
                    @if (ViewData.ModelState.ContainsKey("SuccessMessage"))
                    {
                        <p class="text-success text-center">@Html.Raw(ViewData.ModelState["SuccessMessage"].Errors[0].ErrorMessage)</p>
                    }
                    else if (ViewData.ModelState.ContainsKey("ErrorMessage"))
                    {
                        <p class="text-danger text-center">@Html.Raw(ViewData.ModelState["ErrorMessage"].Errors[0].ErrorMessage)</p>
                    }
                    else{
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                    }
                </div>
            </div>
        </form>
    </div>
</body>