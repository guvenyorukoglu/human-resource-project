@model humanResourceProject.Models.DTOs.AdvanceDTO

@{
    ViewData["Title"] = "CreateAdvance";
}

<h1>Avans Talebi</h1>

<h4>AdvanceDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAdvance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeSurname" class="control-label"></label>
                <input asp-for="EmployeeSurname" class="form-control" />
                <span asp-validation-for="EmployeeSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdvanceAmount" class="control-label"></label>
                <input asp-for="AdvanceAmount" class="form-control" />
                <span asp-validation-for="AdvanceAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdvanceType" class="control-label"></label>
                <input asp-for="AdvanceType" class="form-control" />
                <span asp-validation-for="AdvanceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiryDate" class="control-label"></label>
                <input asp-for="ExpiryDate" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdateDate" class="control-label"></label>
                <input asp-for="UpdateDate" class="form-control" />
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdvanceStatus" class="control-label"></label>
                <input asp-for="AdvanceStatus" class="form-control" />
                <span asp-validation-for="AdvanceStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdvanceType" class="control-label"></label>
                <input asp-for="AdvanceType" class="form-control" />
                <span asp-validation-for="AdvanceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @Html.HiddenFor(model => model.EmployeeId)
            @Html.HiddenFor(model => model.Status)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.AdvanceStatus)

            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Anasayfaya Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}